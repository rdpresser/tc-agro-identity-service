{
  "PathBase": null,
  "Database": {
    "Postgres": {
      "Host": "localhost",
      "Port": 5432,
      "Database": "tc-agro-identity-db",
      "MaintenanceDatabase": "postgres",
      "UserName": "postgres",
      "Password": "postgres",
      "Schema": "public",
      "ConnectionTimeout": 30,
      "MinPoolSize": 2,
      "MaxPoolSize": 20
    }
  },
  "Cache": {
    "Redis": {
      "Host": "localhost",
      "Port": 6379,
      "Password": ""
    }
  },
  "Messaging": {
    "RabbitMQ": {
      "Host": "localhost",
      "Port": 5672,
      "ManagementPort": 15672,
      "VirtualHost": "/",
      "Exchange": "identity.events",
      "UserName": "guest",
      "Password": "guest",
      "AutoProvision": true,
      "Durable": true,
      "UseQuorumQueues": false,
      "AutoPurgeOnStartup": false
    }
  },
  "Services": {
    "Identity": {
      "HttpPort": 5001
    },
    "Farm": {
      "HttpPort": 5002
    },
    "SensorIngest": {
      "HttpPort": 5003
    },
    "AnalyticsWorker": {
      "HttpPort": 5004
    },
    "Dashboard": {
      "HttpPort": 5005
    }
  },
  "Auth": {
    "Jwt": {
      "Issuer": "http://localhost:5001",
      "SecretKey": "your-256-bit-secret-key-change-in-production-12345678",
      "Audience": [
        "tc-agro-identity-service",
        "tc-agro-farm-service",
        "tc-agro-sensor-ingest-service",
        "tc-agro-analytics-worker",
        "tc-agro-dashboard-service"
      ],
      "ExpirationInMinutes": 480
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Telemetry": {
    "Grafana": {
      "_comment": "Grafana Agent Configuration - In Docker Compose: set Agent.Enabled=true to export traces/logs via OTLP to otel-collector. Host should be 'otel-collector' (Docker service name).",
      "Agent": {
        "Host": "otel-collector",
        "OtlpGrpcPort": 4317,
        "OtlpHttpPort": 4318,
        "MetricsPort": 12345,
        "Enabled": true,
        "_comment": "Docker Compose: Enabled=true, Host=otel-collector. Local .NET run: Enabled=false or Host=localhost"
      },
      "Otlp": {
        "Endpoint": "http://otel-collector:4318",
        "Protocol": "http/protobuf",
        "Headers": null,
        "TimeoutSeconds": 10,
        "Insecure": true,
        "_comment": "Protocol=http/protobuf better supported than gRPC. OTEL Collector receives on 4318"
      }
    }
  },
  "Serilog": {
    "_comment": "Development: Serilog outputs to Console (Compact JSON) AND OpenTelemetry Collector via OTLP. OTEL Collector routes to Loki. UseCustomSerilog() adds semantic enrichers (trace_id, span_id, service.name).",
    "Using": [ "Serilog.Sinks.Console", "Serilog.Formatting.Compact", "Serilog.Sinks.OpenTelemetry" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
          "restrictedToMinimumLevel": "Debug"
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "endpoint": "http://otel-collector:4318/v1/logs",
          "protocol": "HttpProtobuf",
          "resourceAttributes": {
            "service.name": "tc-agro-identity",
            "service.namespace": "tc-agro",
            "deployment.environment": "development"
          },
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ]
  }
}
