{
  "PathBase": null, // e.g. "/identity"
  "Database": {
    "Postgres": {
      "Host": "localhost",
      "Port": 5432,
      "Database": "tc-agro-identity-db",
      "MaintenanceDatabase": "postgres",
      "UserName": "postgres",
      "Password": "postgres",
      "Schema": "public",
      "ConnectionTimeout": 30,
      "MinPoolSize": 2,
      "MaxPoolSize": 20
    }
  },
  "Cache": {
    "Redis": {
      "Host": "localhost",
      "Port": 6379,
      "Password": ""
    }
  },
  "Messaging": {
    "RabbitMQ": {
      "Host": "localhost",
      "Port": 5672,
      "ManagementPort": 15672,
      "VirtualHost": "/",
      "Exchange": "identity.events",
      "UserName": "guest",
      "Password": "guest",
      "AutoProvision": true,
      "Durable": true,
      "UseQuorumQueues": false,
      "AutoPurgeOnStartup": false
    }
  },
  "Services": {
    "Identity": {
      "HttpPort": 5001
    },
    "Farm": {
      "HttpPort": 5002
    },
    "SensorIngest": {
      "HttpPort": 5003
    },
    "AnalyticsWorker": {
      "HttpPort": 5004
    },
    "Dashboard": {
      "HttpPort": 5005
    }
  },
  "Auth": {
    "Jwt": {
      "Issuer": "http://localhost:5001",
      "SecretKey": "your-256-bit-secret-key-change-in-production-12345678",
      "Audience": [
        "tc-agro-identity-service",
        "tc-agro-farm-service",
        "tc-agro-sensor-ingest-service",
        "tc-agro-analytics-worker",
        "tc-agro-dashboard-service"
      ],
      "ExpirationInMinutes": 480
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Telemetry": {
    "Grafana": {
      "_comment": "Grafana Agent Configuration - Set Agent.Enabled=true to export traces via OTLP. If false, traces are generated but not exported. Logs go via stdout, metrics via /metrics endpoint.",
      "Agent": {
        "Host": "localhost",
        "OtlpGrpcPort": 4317,
        "OtlpHttpPort": 4318,
        "MetricsPort": 12345,
        "Enabled": false,
        "_comment": "Set Enabled=false during development if Grafana Agent is not running"
      },
      "Otlp": {
        "Endpoint": "http://localhost:4317",
        "Protocol": "grpc",
        "Headers": null,
        "TimeoutSeconds": 10,
        "Insecure": true,
        "_comment": "Endpoint is auto-built from Agent.Host and ports when Agent.Enabled=true"
      }
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console" ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "restrictedToMinimumLevel": "Debug"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "TC.Aro.Identity.Service"
    }
  }
}
